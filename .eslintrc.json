{
  "env": {
    "node": true,
    "browser": true,
    "es6": true,
    "jest": true
  },
  "extends": ["plugin:vue/essential", "eslint:recommended", "prettier"],
  "plugins": ["prettier", "vue"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 11,
    "sourceType": "module"
  },
  "ignorePatterns": ["/dist"],
  "rules": {
    "prettier/prettier": "error",
    "indent": "off",
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "double", "avoid-escape"],
    "semi": ["error", "always"]
  }
}
